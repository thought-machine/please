sh_binary(
    name = "env_printer",
    data = [
        "wibble.txt",
        ":wibble",
    ],
    main = "env_printer.sh",
)

sh_cmd(
    name = "wibble",
    cmd = "echo wibble",
)

sh_cmd(
    name = "wobble",
    cmd = "sleep 0.1 && echo wobble",
)

# Test add_data functionality
genrule(
    name = "_add_data_gen",
    cmd = "echo testing",
    binary = True,
    outs = ["banana.txt"],
    pre_build = lambda name: add_data(name, get_labels(name, 'test:')),
)
