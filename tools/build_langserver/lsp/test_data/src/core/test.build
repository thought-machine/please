go_library(
    name = "core",
    srcs = glob(
        ["*.go"],
        exclude = [
            "*_test.go",
            "version.go",
        ],
        allow_empty = True,
    ),
    visibility = ["PUBLIC"],
    deps = [
        "//third_party/go:gcfg",
        "//third_party/go:logging",
    ],
)

go_test(
    name = "config_test",
    srcs = ["config_test.go"],
    data = glob(["test_data/*.plzconfig*"], allow_empty = True),
    deps = [
        ":core",
    ],
)
